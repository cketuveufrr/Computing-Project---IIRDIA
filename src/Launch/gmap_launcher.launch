<launch>
  <!-- Topics sources -->
  <arg name="scan_topic"  default="/rvr1/scan" />
  <arg name="odom_topic"  default="/rvr1/odom" />

  <!-- Frames TF -->
  <arg name="map_frame"    default="map" />
  <arg name="odom_frame"   default="odom" />
  <arg name="base_frame"   default="base_link" />
  <arg name="laser_frame"  default="laser_frame" />

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <!-- Remappage des topics -->
    <remap from="scan" to="$(arg scan_topic)" />
    <remap from="odom" to="$(arg odom_topic)" />
    <remap from="map" to="$(arg map_frame)" />
    <remap from="map_metadata" to="$(arg map_frame)_metadata" />

    <!-- Définition des frames -->
    <param name="map_frame"    value="$(arg map_frame)" />
    <param name="odom_frame"   value="$(arg odom_frame)" />
    <param name="base_frame"   value="$(arg base_frame)" />
    <param name="laser_frame"  value="$(arg laser_frame)" />

    <!-- Fréquence de mise à jour de la carte (sec) -->
    <param name="map_update_interval" value="0.5" />

    <!-- Mise à jour sur déplacement (linéaire en m, angle en rad) -->
    <param name="linearUpdate"   value="0.10" />
    <param name="angularUpdate"  value="0.09" />
    <param name="temporalUpdate" value="-1.0" />

    <!-- Taille de la carte (mètres) -->
    <param name="xmin" value="-5.0" />
    <param name="ymin" value="-5.0" />
    <param name="xmax" value=" 5.0" />
    <param name="ymax" value=" 5.0" />

    <!-- Résolution de la grille (m) -->
    <param name="delta"    value="0.05" />
    <param name="maxRange" value="10.0" />
    <param name="maxUrange" value="0.50" />

    <!-- Scan matcher -->
    <param name="sigma"       value="0.05" />
    <param name="kernelSize"  value="1" />
    <param name="lstep"       value="0.05" />
    <param name="astep"       value="0.02" />
    <param name="iterations"  value="5" />

    <!-- Likelihood field -->
    <param name="lsigma"       value="0.075" />
    <param name="ogain"        value="3.0" />
    <param name="lskip"        value="0" />
    <param name="minimumScore" value="50.0" />

    <!-- Erreurs d’odométrie -->
    <param name="srr" value="0.02" />
    <param name="srt" value="0.02" />
    <param name="str" value="0.02" />
    <param name="stt" value="0.02" />

    <!-- Filtre particulaire -->
    <param name="particles"          value="30" />
    <param name="resampleThreshold"  value="0.5" />

    <!-- Échantillonnage vraisemblance -->
    <param name="llsamplerange" value="0.01" />
    <param name="llsamplestep"  value="0.01" />
    <param name="lasamplerange" value="0.005" />
    <param name="lasamplestep"  value="0.005" />

    <!-- Seuil occupation -->
    <param name="occ_thresh" value="0.25" />

    <!-- Publication TF -->
    <param name="transform_publish_period" value="0.05" />
  </node>
</launch>
